@model ClientModel;

@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Detalhes </h2>
               

                    <input type="hidden" name="ClientId" value="@Model.ClientId"/>


                    <div class="form-group">
                        <label class="control-label">Nome</label>
                        <input type="text" class="form-control col-5" name="Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input type="email" class="form-control col-5" name="Email" value="@Model.Email"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Data Nascimento</label>
                        <input class="form-control col-5" name="Birth" value="@Model.Birth"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observação</label>
                        <textarea class="form-control" name="Observation" >@Model.Observation</textarea>
                    </div>
                    
                     <a href="/client" class="btn btn-warning btn-sm">Inicio</a>
                
            </div>
        </div>
    </div>
</div>