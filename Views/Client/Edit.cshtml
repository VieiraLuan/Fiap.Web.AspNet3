@model ClientModel; /*Carregamos a Model e nesta classse fazemos a mesma coisa do cadastro novo apenas tomando cuidado com ctr c e v , lembrar de mudar os controllers e metodos(actions)*/

@{
    /*Carregamos a Model e nesta classse fazemos a mesma coisa do cadastro novo
     * apenas tomando cuidado com ctr c e v
     * , lembrar de mudar os controllers e metodos(actions)*/

}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Editar</h2>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert alert-warning" role="alert"></div>
                }
                else
                {
                    <form asp-action="NewClient" asp-controller="Client" method="post">
                         <div class="form-group">
                            <label class="control-label" asp-for="Name"></label>
                            <input type="text" class="form-control col-5" asp-for="Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Email"></label>
                            <input type="email" class="form-control col-5" asp-for="Email" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Birth"></label>
                            <input class="form-control col-5" asp-for="Birth" />
                            <span class="text-danger" asp-validation-for="Birth"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Observation">Observação</label>
                            <textarea class="form-control" asp-for="Observation"></textarea>
                            <span class="text-danger" asp-validation-for="Observation"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label" asp-for="RepresentanteId">Representante</label>
                            <select name="RepresentanteId">
                                <option value="">Selecione</option>
                                @foreach (var representante in ViewBag.representantes)
                                {
                                    if (representante.RepresentanteId == Model.RepresentanteId)
                                    {
                                        <option selected value="@representante.RepresentanteId">@representante.NomeRepresentante</option>
                                    }
                                    else
                                    {
                                        <option value="@representante.RepresentanteId">@representante.NomeRepresentante</option>
                                    }
                                    
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="RepresentanteId"></span>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>