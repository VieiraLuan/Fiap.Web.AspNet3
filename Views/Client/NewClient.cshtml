<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Novo</h2>
                <form action="/client/NewClient" method="post">
                    <div class="form-group">
                        <label class="control-label">Nome</label>
                        <input type="text" class="form-control col-5" name="Name" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input type="email" class="form-control col-5" name="Email" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Data Nascimento</label>
                        <input class="form-control col-5" name="Birth" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observação</label>
                        <textarea class="form-control" name="Observation"></textarea>
                    </div>
                    <a href="/client" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>